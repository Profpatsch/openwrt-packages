#!/bin/sh /etc/rc.common

START=49

net_start_iface() {
        local cfg="$1"
        export ACTION="ifup"
        export INTERFACE="$cfg"
        /etc/hotplug.d/iface/30-auto-ipv6
        return 0
}


start() {
	config_load autoipv6
	config_get enable tunnel enable
	[ "$enable" == "1" ] || exit 0
	config_load network
	config_foreach net_start_iface interface
}

